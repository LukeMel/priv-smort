    "EH85": {
        "Loan": 120_000,
        "Grant": 0.05 * 120_000,
        "Net": 120_000 - 0.05 * 120_000
    },
    "EH85+EE": {
        "Loan": 150_000,
        "Grant": 0.10 * 150_000,
        "Net": 150_000 - 0.10 * 150_000
    }
}
