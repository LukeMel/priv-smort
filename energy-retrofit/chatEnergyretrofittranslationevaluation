import math
import pandas as pd

def annuity_payment(principal, annual_rate, years):
    """Return monthly annuity payment for given principal, annual rate, term in years."""
    m = years*12
    r = annual_rate/12
    if r == 0:
        return principal/m
    return principal * r / (1 - (1 + r)**(-m))

def kfw261_scenarios():
    scenarios = []
    interest_rates = [0.025, 0.035, 0.045]
    terms = [
        ("20y (2 TFJ)", 20, 2),
        ("30y (5 TFJ)", 30, 5),
    ]
    # EH85 base
    loan_eh85 = 120_000
    ts_eh85 = 0.05 * min(loan_eh85, 120_000)
    # EH85 + EE
    loan_ee = 150_000
    ts_ee = 0.10 * min(loan_ee, 150_000)
    
    for name, loan, ts in [
        ("EH85 (Basis)", loan_eh85, ts_eh85),
        ("EH85 + EE-Klasse", loan_ee, ts_ee),
    ]:
        for term_name, total_years, grace_years in terms:
            amort_years = total_years - grace_years
            for ar in interest_rates:
                monthly_interest_only = loan * ar / 12
                monthly_annuity = annuity_payment(loan - ts, ar, amort_years)
                scenarios.append({
                    "Programm": name,
                    "Kreditbetrag (€)": loan,
                    "Tilgungszuschuss (€)": round(ts, 2),
                    "Netto-Schuld nach Zuschuss (€)": round(loan - ts, 2),
                    "Laufzeit": term_name,
                    "Zins (p.a.)": f"{ar*100:.1f}%",
                    "Zins-only je Monat (grace) (€)": round(monthly_interest_only, 2),
                    "Annuität je Monat (nach grace) (€)": round(monthly_annuity, 2),
                    "Amortisationsdauer (Monate)": amort_years*12
                })
    df = pd.DataFrame(scenarios)
    # Order columns
    df = df[[
        "Programm","Kreditbetrag (€)","Tilgungszuschuss (€)","Netto-Schuld nach Zuschuss (€)",
        "Laufzeit","Zins (p.a.)","Zins-only je Monat (grace) (€)","Annuität je Monat (nach grace) (€)","Amortisationsdauer (Monate)"
    ]]
    return df

df = kfw261_scenarios()

import caas_jupyter_tools as cj
