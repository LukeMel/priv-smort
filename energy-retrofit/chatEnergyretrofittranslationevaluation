# Re-create the table after the environment reset
import pandas as pd
import math

def annuity(principal, annual_rate, years):
    m = int(years * 12)
    r = annual_rate / 12
    if r == 0:
        return principal / m
    return principal * r / (1 - (1 + r) ** (-m))

# Base principals after grants
# Option 1 (Mixed)
o1_kfw261_gross = 100_000
o1_kfw261_grant = 0.10 * o1_kfw261_gross
o1_kfw261_net = o1_kfw261_gross - o1_kfw261_grant  # 90,000 €

o1_em_gross = 80_000
o1_em_grant = 0.20 * o1_em_gross
o1_em_net = o1_em_gross - o1_em_grant            # 64,000 €

# Option 2 (Max 261, no EM)
o2_kfw261_gross = 150_000
o2_kfw261_grant = 0.10 * o2_kfw261_gross
o2_kfw261_net = o2_kfw261_gross - o2_kfw261_grant  # 135,000 €

o2_house_net = 30_000   # remainder not absorbed by 261

term_total_years = 24
grace_years = 1
amort_years = term_total_years - grace_years

kfw_rates = [0.025, 0.030, 0.035]
other_rates = [0.035, 0.040, 0.045, 0.050]

rows = []
for r261 in kfw_rates:
    for rX in other_rates:
        # Option 1
        o1_interest_only = (o1_kfw261_gross * r261 / 12) + (o1_em_net * rX / 12)
        o1_annuity = annuity(o1_kfw261_net, r261, amort_years) + annuity(o1_em_net, rX, amort_years)
        
        # Option 2
        o2_interest_only = (o2_kfw261_gross * r261 / 12) + (o2_house_net * rX / 12)
        o2_annuity = annuity(o2_kfw261_net, r261, amort_years) + annuity(o2_house_net, rX, amort_years)
        
        rows.append({
            "Zinssatz KfW 261 (pro Jahr)": f"{r261*100:.1f}%",
            "Zinssatz Ergänzung/Haushypothek (pro Jahr)": f"{rX*100:.1f}%",
            "Option 1 – Zinszahlung im ersten Jahr (€/Monat)": round(o1_interest_only, 2),
            "Option 2 – Zinszahlung im ersten Jahr (€/Monat)": round(o2_interest_only, 2),
            "Option 1 – Annuität nach dem ersten Jahr (€/Monat)": round(o1_annuity, 2),
            "Option 2 – Annuität nach dem ersten Jahr (€/Monat)": round(o2_annuity, 2),
            "Differenz Annuität (Opt2 - Opt1) (€/Monat)": round(o2_annuity - o1_annuity, 2),
