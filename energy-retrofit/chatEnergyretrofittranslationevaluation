# Compute payment scenarios for KfW 261 with user's choice:
# - EH85 (Basis): 120,000 € loan, 5% grant (capped at 120k)
# - EH85 + EE-Klasse: 150,000 € loan, 10% grant (capped at 150k)
# Term: 24 years total, 1 tilgungsfreies Jahr (TFJ) → 23 years amortization
# Show sensitivity for interest rates: 2.5%, 3.0%, 3.5%, 4.0%, 4.5%

import pandas as pd
import math

def annuity_payment(principal, annual_rate, years):
    m = years * 12
    r = annual_rate / 12
    if r == 0:
        return principal / m
    return principal * r / (1 - (1 + r) ** (-m))

def build_table():
    rows = []
    rates = [0.025, 0.030, 0.035, 0.040, 0.045]
    term_total_years = 24
    grace_years = 1
    amort_years = term_total_years - grace_years
    
    scenarios = [
        ("EH85 (Basis)", 120_000, 0.05, 120_000),
        ("EH85 + EE-Klasse", 150_000, 0.10, 150_000),
    ]
    
    for name, loan, grant_rate, cap in scenarios:
        grant = grant_rate * min(loan, cap)
        net_principal = loan - grant
        for ar in rates:
            monthly_interest_only = loan * ar / 12  # during grace year
            monthly_annuity = annuity_payment(net_principal, ar, amort_years)
            rows.append({
                "Programm": name,
                "Bruttokredit (€)": loan,
                "Tilgungszuschuss (%)": f"{grant_rate*100:.0f}%",
                "Tilgungszuschuss (€)": round(grant, 2),
                "Netto-Schuld nach Zuschuss (€)": round(net_principal, 2),
                "Laufzeit gesamt": f"{term_total_years} Jahre",
                "Tilgungsfreie Jahre": grace_years,
                "Tilgungsjahre": amort_years,
                "Zinssatz (p.a.)": f"{ar*100:.1f}%",
                "Zins-only im TFJ (€/Monat)": round(monthly_interest_only, 2),
                "Annuität nach TFJ (€/Monat)": round(monthly_annuity, 2),
            })
    
    df = pd.DataFrame(rows)
    # Sort nicely
    df["sort_rate"] = df["Zinssatz (p.a.)"].str.replace("%","").astype(float)
    df = df.sort_values(["Programm","sort_rate"]).drop(columns=["sort_rate"]).reset_index(drop=True)
    return df

df = build_table()

import caas_jupyter_tools as cj
cj.display_dataframe_to_user(
    "KfW 261 – 24 Jahre / 1 TFJ: Monatsraten & Zuschuss (EH85 vs. EH85+EE)",
    df
)

